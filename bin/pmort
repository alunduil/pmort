import logging
import sys

from pmort.application import PostMortemApplication

logger = logging.getLogger("console")

def main():
    global logger
    try:
        app = PostMortemApplication()
        logger = logging.getLogger()
        app.run()
    except Exception as error:
        logger.exception(error)
        loggging.shutdown()
        sys.exit(1)

if __name__ == "__main__":
    main()

